<resources xmlns:tools="http://schemas.android.com/tools">
    <color name="cardBackground">@color/gray_800</color>
    <color name="buttonColor">@color/gray_800</color>
    <color name="bottomNavBackground">@color/gray_800</color>
    <!-- Base application theme. -->
    <style name="Theme.GithubUser" parent="Theme.AppCompat.DayNight">
        <!-- ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="homeAsUpIndicator">@drawable/ic_arrow_left</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_900</item>
        <item name="colorPrimaryVariant">@color/gray_800</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/gray_100</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorOnBackground">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <!-- Customize your theme here. -->
        <item name="android:colorBackground">?attr/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.GithubUser.Highlight" parent="Theme.GithubUser">
        <item name="colorControlHighlight">@color/colorRipple</item>
    </style>

    <style name="ThemeOverlay.GithubUser.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
    </style>
</resources>