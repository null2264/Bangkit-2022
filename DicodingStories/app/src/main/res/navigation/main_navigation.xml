<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/main_navigation"
            app:startDestination="@id/dashboardFragment">
    <fragment
            android:id="@+id/loginFragment"
            android:name="io.github.null2264.dicodingstories.ui.auth.LoginFragment"
            android:label="loginFragment"
            tools:layout="@layout/fragment_login">
        <action
                android:id="@+id/action_login_to_dashboard"
                app:destination="@id/dashboardFragment"
                app:popUpTo="@id/dashboardFragment"
                app:popUpToInclusive="true"/>
    </fragment>
    <fragment
            android:id="@+id/dashboardFragment"
            tools:layout="@layout/fragment_dashboard"
            android:name="io.github.null2264.dicodingstories.ui.story.DashboardFragment">
        <action
                android:id="@+id/action_show_detail"
                app:destination="@id/detailFragment"/>
        <action
                android:id="@+id/action_add_new_story"
                app:destination="@id/newStoryFragment"/>
    </fragment>
    <fragment
            android:id="@+id/registerFragment"
            android:name="io.github.null2264.dicodingstories.ui.auth.RegisterFragment"
            android:label="registerFragment"
            tools:layout="@layout/fragment_register"/>
    <fragment
            android:id="@+id/detailFragment"
            tools:layout="@layout/fragment_detail"
            android:name="io.github.null2264.dicodingstories.ui.story.DetailFragment">
        <argument
                android:name="story"
                app:argType="io.github.null2264.dicodingstories.data.model.Story"/>
    </fragment>
    <fragment
            android:id="@+id/newStoryFragment"
            android:name="io.github.null2264.dicodingstories.ui.story.NewStoryFragment"
            android:label="fragment_new_story"
            tools:layout="@layout/fragment_new_story"/>
</navigation>