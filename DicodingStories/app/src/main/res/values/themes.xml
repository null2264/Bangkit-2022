<resources xmlns:tools="http://schemas.android.com/tools">
    <color name="editTextBackground">#D8D8D8</color>
    <color name="textButtonColor">@color/gray_600</color>
    <color name="cardViewBackground">#E5EDF2</color>

    <style name="Theme.DicodingStories.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>

        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_dicoding_logo_downscaled</item>
        <item name="windowSplashScreenAnimationDuration">800</item>

        <item name="postSplashScreenTheme">@style/Theme.DicodingStories</item>
    </style>

    <style name="Theme.DicodingStories" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="homeAsUpIndicator">@drawable/ic_back</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_600</item>
        <item name="colorPrimaryVariant">@color/gray_800</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:windowActivityTransitions">true</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>

        <item name="backgroundColor">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="Theme.DicodingStories.Starting.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Theme.DicodingStories.Starting.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>